--3월29일
 
 --union:집합 연산자, 테이블을 합쳐줌
 
 --사용
 
 SELECT EMPNO, ENAME, DEPTNO
 FROM EMP
 WHERE DEPTNO=10
 
 UNION
 
 SELECT EMPNO, ENAME, SAL
 FROM EMP
 WHERE DEPTNO=20;
 
 SELECT * FROM EMP;
 
 --JOIN:다수의 테이블을 쿼리문으로 연결하여 마치 하나의 테이블 처럼 이용가능
 
 SELECT *
 FROM EMP, DEPT
 WHERE EMP.DEPTNO= DEPT.DEPTNO
 ORDER BY EMPNO;
